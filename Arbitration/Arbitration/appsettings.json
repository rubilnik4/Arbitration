{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "FormatterName": "json"
    },
    "OpenTelemetry": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },

  "OpenTelemetry": {
    "Logging": {
      "LokiEndpoint": "http://loki:3100"
    },
    "Tracing": {
      "OtlpEndpoint": "http://tempo:4317",
      "ResourceAttributes": {
        "service.name": "spread-job",
        "service.namespace": "arbitrage",
        "service.instance.id": "instance-1"
      }
    },
    "Metrics": {
      "PrometheusEndpoint": "http://prometheus:9090"
    }
  },

  "AllowedHosts": "*",

  "AppConfig": {
    "Project": {
      "MaxHistorySize": 10,
      "SpreadThreshold": 100000,
      "AssetLoadingDelay": "00:00:15",
      "Assets": {
        "AssetA": "BTCUSDT_250627",
        "AssetB": "BTCUSDT_250926"
      }
    },
    "Postgres": {
      "ConnectionString": "Host=localhost;Port=5432;Database=test;Username=admin;Password=secret;"
    },
    "Cache": {
      "LastPriceExpiration": "00:00:30",
      "LastSpreadExpiration": "00:00:30"
    }
  }
}